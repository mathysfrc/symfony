{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1 class="catName">Toutes les séries : </h1>
     {% for program in programs %}
        <div>
            <h2 class="mt">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p class='mts'>{{ program.synopsis }}</p>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

     	<a class='a-role'href="{{ path("program_new") }}">Ajouter une série</a>

    <a class='a-role'href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}