{% extends 'base.html.twig' %}
{% block title %}Saison
{% endblock %}
{% block body %}
	<div>
		<h1>{{ program.title }}</h1>
		<p>{{ program.country }}</p>
		<p>{{ program.category.name }}</p>
	</div>
	<ul>
		{% for season in program.seasons %}
			<li>
				<p>
					Saison numéro : {{ season.number }}</p>
				<a href='{{ path("program_season_show", { programId: program.id, seasonId: season.id }) }}'>Voir les épisodes</a>
			</li>
		{% endfor %}
	</ul>
	<a href="{{ path("program_index", {id: program.id}) }}">
		Retour à la liste des programmes
	</a>
{% endblock %}
